battery_level {
    blocks = '_‚ñÅ‚ñÇ‚ñÉ‚ñÑ‚ñÖ‚ñÜ‚ñá‚ñà'
    charging_character = '‚ö°'
    measurement_mode = 'sys'
    notify_low_level = true
    on_udev_power_supply = 'refresh'
    color_good = '#02d7f2'
    color_bad = '#ff003c'
    color_charging = '#fcee0a'
    hide_when_full = true
    notification = true
    threshold_degraded = 25
    threshold_full = 95
    format_notify_charging = 'Charging ({percent}%)'
    format_notify_discharging = "{time_remaining}"
}

volume_status {
    format = '[\?if=is_input ÔÑò|‚ô™] {percentage}%'
	format_muted = '[\?if=is_input üò∂|‚ô™] muted'
	device = "0"
	channel = "Master"
	command = "pactl"
	on_click 1 = "exec pavucontrol"
	on_click 2 = "exec pactl set-sink-mute 0 toggle"
	on_click 3 = "exec killall pactl"
	on_click 4 = "exec pactl set-sink-volume 0 +5%"
	on_click 5 = "exec pactl set-sink-volume 0 -5%"
    color_good = '#02d7f2'
    color_bad = '#ff003c'
}

