# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# √ü
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 1  
    color = '#299e95'
#   color_yellow = '#fcee0a'
#   color_cyan = '#02d7f2'
#   color_red = '#ff003c'
}

conky {
    config = {
        'update_interval': 10,             # update interval for conky
        'update_interval_on_battery': 60, # update interval when on battery
        'format_human_readable': True,    # if False, print in bytes
        'short_units': False,             # shortens units, eg kiB > k, GiB > G
        'uppercase': True,                # upper placeholders
    }
}

order = "battery_level"
order += "conky addr"
conky += "conky loadavg"
order += "conky memory"
order += "volume_status"
order += "conky date"

# button numbers
#1 = left click
#2 = middle click
#3 = right click
#4 = scroll up
#5 = scroll down

