#}

conky memory {
    format = 'Mem [\?color=#696fc0 {mem}/{memmax}] '
    format += '[\?color=violet {memperc}% \[{membar}\]]'
    thresholds += [
        (0, 'darkgray'), (0.001, 'good'), (50, 'degraded'),
        (75, 'orange'), (85, 'bad')
    ]
}

