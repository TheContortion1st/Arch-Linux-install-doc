# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# √ü
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 5
    color = '#299e95'
#   color_yellow = '#fcee0a'
#   color_cyan = '#02d7f2'
#   color_red = '#ff003c'
}

conky {
    config = {
        'update_interval': 1,            # update interval for conky
        'update_interval_on_battery': 60, # update interval when on battery
        'format_human_readable': True,    # if False, print in bytes
        'short_units': False,             # shortens units, eg kiB > k, GiB > G
        'uppercase': True,                # upper placeholders
    }
}

order += "battery_level"
order += "conky addr"
order += "conky memory"
order += "volume_status"
order += "conky loadavg"
order += "clock"

# button numbers
#1 = left click
#2 = middle click
#3 = right click
#4 = scroll up
#5 = scroll down

conky addr {
    format = '[\?color=orange Ôûñ:{addr enp2s0}] '
#    format += '[\?color=violet Ôá´:{addr wlp4s0}]' 
    format += '[\?color=violet Ôá´:{addr wlp4s0}]' 
}

conky loadavg {
#    format = 'Loadavg '
    format = 'ÔÉä:'
    format += '[\?color=lightgreen {loadavg 1} ]'
    format += '[\?color=lightgreen {loadavg 2} ]'
    format += '[\?color=lightgreen {loadavg 3}]'
}

conky memory {
    format = 'Ôî∏:[\?color=#696fc0 {mem}/{memmax}] '
#    format += '[\?color=violet {memperc}% \[{membar}\]]'
    format += '[\?color=violet {memperc}%]'
    thresholds = [
        (0, 'darkgray'), (0.001, 'good'), (50, 'degraded'),
        (75, 'orange'), (85, 'bad')
    ]
}

battery_level {
    blocks = 'ÔâÑÔâÉÔâÇÔâÅÔâÄ'
#    blocks = '_‚ñÅ‚ñÇ‚ñÉ‚ñÑ‚ñÖ‚ñÜ‚ñá‚ñà'
    charging_character = '‚ö°'
    measurement_mode = 'sys'
    notify_low_level = true
    on_udev_power_supply = 'refresh'
    color_good = '#02d7f2'
    color_bad = '#ff003c'
    color_charging = 'green'
    hide_when_full = true
    notification = true
    threshold_degraded = 25
    threshold_full = 95
    format_notify_charging = 'Charging ({percent}%)'
    format_notify_discharging = "{time_remaining}"
}

clock {
    format = ["{Europe/Berlin}"]
    format_time = "%a %e %b %I:%M:%S %P %#Z"
    block_hours = 12
    on_click 1 = "exec zenity --calendar"
    color = '#299e95'
}

